{
    "manifest_version": 3,
    "name": "BF4 Battlescreen Fix",
    "version": "1.0",

    "description": "Fixes the Battlescreen on Battlelog to make it functional again.",

    "content_scripts": [
        {
            "matches": ["https://battlelog.battlefield.com/*"],
            "js": ["browser-polyfill.min.js", "injectWebsocketOverride.js", "relayMessages.js"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["websocketOverride.js"],
            "matches": ["https://battlelog.battlefield.com/*"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; connect-src 'self' ws: wss:; object-src 'none';"
    }
    
}